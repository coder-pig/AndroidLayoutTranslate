<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cly_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_mine"
>

    <RelativeLayout
            android:id="@+id/rly_top_bar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#000000"
    >

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:text="返回"
                android:layout_alignParentStart="true"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人中心"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
        />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_login"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rly_top_bar"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="90dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cly_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/ic_launcher"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_login_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_cover"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="请点击登录"
                    android:textSize="17dp"
                    android:textColor="@color/gray"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_login_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back_right"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_first"
            android:layout_width="0dp"
            android:layout_height="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_login"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cly_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_order"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"

                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:textSize="14sp"
                    android:textColor="@color/gray_medium"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_my_order"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_my_order"
                    app:layout_constraintBottom_toBottomOf="@id/tv_my_order"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_order"
                    android:scaleType="fitCenter"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_my_order_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_my_order"
                    app:layout_constraintBottom_toBottomOf="@id/tv_my_order"
                    android:layout_marginEnd="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back_right"
            />

            <View
                    android:id="@+id/v_my_order_divider"
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_my_order"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_order"
                    android:background="@color/gray_hover"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_exchange"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_my_order_divider"
                    android:paddingStart="50dp"
                    android:paddingEnd="0dp"
                    android:gravity="center_vertical"
                    android:text="兑换"
                    android:textSize="14sp"
                    android:textColor="@color/gray_medium"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_exchange"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_exchange"
                    app:layout_constraintBottom_toBottomOf="@id/tv_exchange"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_exchange_icon"
                    android:scaleType="fitCenter"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_exchange_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_exchange"
                    app:layout_constraintBottom_toBottomOf="@id/tv_exchange"
                    android:layout_marginEnd="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back_right"
            />

            <View
                    android:id="@+id/v_exchange_divider"
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_exchange"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_order"
                    android:background="@color/gray_hover"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

